<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/supplier.css" />
    <title>Supplier</title>
  </head>
  <body>
    <%- include('partials/sidebar') %>
    <main>
      <section class="supplier-container">
        <div class="supplier-header">
          <h2>Supplier List</h2>
          <button class="add-btn"><i class="bx bx-plus"></i> Add Supplier</button>
        </div>
        <div class="controls">
          <div class="entries-control">
            <label for="entries">Show</label>
            <select id="entries" class="entries-select">
              <option value="3">3</option>
              <option value="5">5</option>
              <option value="10">10</option>
            </select>
            <span>Entries</span>
          </div>
          <div class="search-bar">
            <input type="text" placeholder="Search" />
            <i class="bx bx-search"></i>
          </div>
        </div>
        <table class="supplier-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Supplier Name</th>
              <th>Supplier Contact no.</th>
              <th>Supplier Address</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Sample 1</td>
              <td>Sample 1</td>
              <td>Sample 1</td>
              <td>Active</td>
              <td>
                <i class="bx bx-edit"></i>
                <i class="bx bx-trash"></i>
              </td>
            </tr>
            <tr>
              <td>2</td>
              <td>Sample 2</td>
              <td>Sample 2</td>
              <td>Sample 2</td>
              <td>Active</td>
              <td>
                <i class="bx bx-edit"></i>
                <i class="bx bx-trash"></i>
              </td>
            </tr>
            <tr>
              <td>3</td>
              <td>Sample 3</td>
              <td>Sample 3</td>
              <td>Sample 3</td>
              <td>Active</td>
              <td>
                <i class="bx bx-edit"></i>
                <i class="bx bx-trash"></i>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="pagination">
          <span>Showing 1 to 3 of 3 Entities</span>
          <div class="page-controls">
            <button class="page-btn">Previous</button>
            <span class="current-page">1</span>
            <button class="page-btn">Next</button>
          </div>
        </div>
      </section>
    </main>

    <!-- Modal Section -->
    <div class="modal" id="addItemModal">
      <div class="modal-content">
          <div class="modal-header">
              <h3><i class="bx bx-plus"></i> Add Supplier</h3>
              <span class="close-btn">&times;</span>
          </div>
          <form class="modal-form">
              <div class="form-grid">
                  <div class="form-group">
                      <label>Supplier Name</label>
                      <input type="text" placeholder="Supplier Name" />
                  </div>
                  <div class="form-group">
                      <label>Supplier Contact No.</label>
                      <input type="text" placeholder="Contact Number" />
                  </div>
                  <div class="form-group">
                      <label>Supplier Address</label>
                      <input type="text" placeholder="Supplier Address" />
                  </div>
                  <div class="form-group">
                      <label>Status</label>
                      <select>
                          <option value="active">Active</option>
                          <option value="inactive">Inactive</option>
                      </select>
                  </div>
              </div>
              <div class="modal-actions">
                  <button type="submit" class="btn-add">Add</button>
              </div>
          </form>
      </div>
  </div>
  

    <!-- View Item Modal -->
    <div class="modal" id="viewItemModal">
      <div class="modal-content">
        <div class="modal-header">
          <h3><i class="bx bx-show"></i> View Item</h3>
          <span class="close-btn">&times;</span>
        </div>
        <form class="modal-form">
          <label>Product Name</label>
          <input type="text" placeholder="Product Name" readonly />

          <label>Product Model</label>
          <input type="text" placeholder="Product Model" readonly />

          <label>Supplier Name</label>
          <input type="text" placeholder="Supplier Name" readonly />

          <label>Address</label>
          <input type="text" placeholder="Supplier Address" readonly />

          <label>Contact Number</label>
          <input type="text" placeholder="Contact Number" readonly />
        </form>
      </div>
    </div>

    <!-- Edit Item Modal -->
    <div class="modal" id="editItemModal">
      <div class="modal-content">
          <div class="modal-header">
              <h3><i class="bx bx-edit"></i> Edit Item</h3>
              <span class="close-btn">&times;</span>
          </div>
          <form class="modal-form">
              <div class="form-grid">
                  <div class="form-group">
                      <label>Supplier Name</label>
                      <input type="text" placeholder="Supplier Name" />
                  </div>
                  <div class="form-group">
                      <label>Supplier Contact No.</label>
                      <input type="text" placeholder="Contact Number" />
                  </div>
                  <div class="form-group">
                      <label>Supplier Address</label>
                      <input type="text" placeholder="Supplier Address" />
                  </div>
                  <div class="form-group">
                      <label>Status</label>
                      <select>
                          <option value="active">Active</option>
                          <option value="inactive">Inactive</option>
                      </select>
                  </div>
              </div>
              <div class="modal-actions">
                  <button type="submit" class="btn-add">Save</button>
              </div>
          </form>
      </div>
  </div>
  

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/js/nav&side.js"></script>
    <script src="/js/supplier.js"></script>
  </body>
</html>
