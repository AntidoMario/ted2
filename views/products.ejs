<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/products.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <%- include('partials/sidebar') %>
      <!-- MAIN -->
      <main>
        <!-- Product List Section -->
        <section class="product-list-section">
          <div class="table-container">
            <div class="table-header">
              <h2>Product List</h2>
            </div>

            <div class="table-controls">
              <label for="show-entries"
                >Show
                <select id="show-entries">
                  <option value="3">3</option>
                  <option value="5">5</option>
                  <option value="10">10</option>
                </select>
                Entries
              </label>
              <div class="search-box">
                <input type="text" placeholder="Search" />
                <i class="bx bx-search"></i>
              </div>
            </div>

            <table class="product-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Category</th>
                  <th>Product Name</th>
                  <th>Product Model</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>1</td>
                  <td>Sample 1</td>
                  <td>Sample 1</td>
                  <td>Sample 1</td>
                  <td>2000</td>
                  <td>100</td>
                  <td>Active</td>
                </tr>
                <tr>
                  <td>2</td>
                  <td>Sample 2</td>
                  <td>Sample 2</td>
                  <td>Sample 2</td>
                  <td>1585</td>
                  <td>120</td>
                  <td>Active</td>
                </tr>
                <tr>
                  <td>3</td>
                  <td>Sample 3</td>
                  <td>Sample 3</td>
                  <td>Sample 3</td>
                  <td>1895</td>
                  <td>110</td>
                  <td>Active</td>
                </tr>
              </tbody>
            </table>

            <div class="table-footer">
              <p>Showing 1 to 3 of 3 entries</p>
              <div class="pagination">
                <button class="btn-pagination">Previous</button>
                <button class="btn-page active">1</button>
                <button class="btn-pagination">Next</button>
              </div>
            </div>
          </div>
        </section>
  

        <!-- Add Product Modal (Hidden by default) -->
        <div class="modal-bg" id="add-product-modal">
          <div class="modal-content-horizontal">
            <div class="modal-header">
              <h2><i class="bx bx-plus"></i> Add Product</h2>
              <span id="close-popup" class="close-btn">&times;</span>
            </div>
            <form class="add-product-form">
              <!-- Form Fields -->
              <div class="form-fields">
                <div class="input-group">
                  <label for="category">Select Category</label>
                  <select id="category">
                    <option value="1">Category 1</option>
                    <option value="2">Category 2</option>
                  </select>
                </div>

                <div class="input-group">
                  <label for="product-model">Product Model</label>
                  <input id="product-model">
                  </inp>
                </div>

                <div class="input-group">
                  <label for="product-name">Product Name</label>
                  <input type="text" id="product-name" placeholder="Name" />
                </div>

                <div class="input-group">
                  <label for="price">Product Price</label>
                  <input type="number" id="price" placeholder="100" />
                </div>
              </div>

              <div class="input-group">
                <label for="quantity">Product Quantity</label>
                <input type="number" id="quantity" placeholder="100" />
              </div>


              <!-- Image Upload Section -->
              <div class="input-group">
                <label for="product-image">Product Image</label>
                <input type="file" id="product-image" accept="image/*" />
              </div>

              <!-- Action Buttons -->
              <div class="form-actions">
                <button type="submit" class="btn-add">Add</button>
                <button type="button" id="cancel-btn" class="btn-cancel">
                  Cancel
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>

      <!-- MAIN -->
    <!-- NAVBAR -->

    <script src="/js/nav&side.js"></script>
    <script src="/js/productModal.js"></script>
  </body>
</html>
