<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <!-- Select2 CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css"
      rel="stylesheet"
    />
    <!-- jQuery (required for Select2) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <link rel="stylesheet" href="/css/inventory.css" />
    <title>Inventory Dashboard</title>
  </head>
  <body>
    <%- include('partials/sidebar') %>
    <main>
      <section class="inventory-container">
        <div class="inventory-header">
          <h2>Inventory List</h2>
          <button class="add-btn"><i class="bx bx-plus"></i> Add Items</button>
        </div>
        <div class="controls">
          <div class="entries-control">
            <label for="entries">Show</label>
            <select id="entries" class="entries-select">
              <option value="3">3</option>
              <option value="5">5</option>
              <option value="10">10</option>
            </select>
            <span>Entries</span>
          </div>
          <div class="search-bar">
            <input type="text" placeholder="Search" />
            <i class="bx bx-search"></i>
          </div>
        </div>
        <table class="inventory-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Product Name</th>
              <th>Product Model</th>
              <th>Supplier</th>
              <th>Date Received</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>Sample 1</td>
              <td>Sample 1</td>
              <td>Sample 1</td>
              <td>123</td>
              <td>123</td>
              <td>Active</td>
              <td>
                <i class="bx bx-show"></i>
                <i class="bx bx-edit"></i>
                <i class="bx bx-trash"></i>
              </td>
            </tr>
            <tr>
              <td>2</td>
              <td>Sample 2</td>
              <td>Sample 2</td>
              <td>Sample 2</td>
              <td>456</td>
              <td>123</td>
              <td>Active</td>
              <td>
                <i class="bx bx-show"></i>
                <i class="bx bx-edit"></i>
                <i class="bx bx-trash"></i>
              </td>
            </tr>
            <tr>
              <td>3</td>
              <td>Sample 3</td>
              <td>Sample 3</td>
              <td>Sample 3</td>
              <td>789</td>
              <td>123</td>
              <td>Active</td>
              <td>
                <i class="bx bx-show"></i>
                <i class="bx bx-edit"></i>
                <i class="bx bx-trash"></i>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="pagination">
          <span>Showing 1 to 3 of 3 Entities</span>
          <div class="page-controls">
            <button class="page-btn">Previous</button>
            <span class="current-page">1</span>
            <button class="page-btn">Next</button>
          </div>
        </div>
      </section>
    </main>

 <!-- Modal Add Section -->
<div class="modal" id="addItemModal">
  <div class="modal-content">
    <div class="modal-header">
      <h3><i class="bx bx-plus"></i> Add Item</h3>
      <span class="close-btn">&times;</span>
    </div>
    <form class="modal-form">
      <div class="form-grid">
        <!-- Product Name and Model -->
        <div class="form-group">
          <label>Product Name</label>
          <input type="text" placeholder="Product Name" />
        </div>
        <div class="form-group">
          <label>Product Model</label>
          <input type="text" placeholder="Product Model" />
        </div>

        <!-- Supplier Name and Categories -->
      <div class="form-group">
    <label>Supplier Name</label>
    <select id="addSupplierName" style="width: 100%">
      <option value="supplier1">ASUS</option>
      <option value="supplier2">Predator</option>
      <option value="supplier3">LENOVO</option>
    </select>
  </div>
  <div class="form-group">
    <label>Categories</label>
    <select id="addCategories" style="width: 100%">
      <option value="category1">Keyboard</option>
      <option value="category2">Mouse</option>
      <option value="category3">CPU</option>
    </select>
  </div>

        <!-- Other Fields -->
        <div class="form-group">
          <label>Product Image</label>
          <input type="file" accept="image/*" />
        </div>
        <div class="form-group">
          <label>Stock</label>
          <input type="number" placeholder="Stock" />
        </div>
        <div class="form-group">
          <label>Date Received</label>
          <input type="date" />
        </div>
        <div class="form-group">
          <label>Status</label>
          <select>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
        </div>
      </div>
      <div class="modal-actions">
        <button type="submit" class="btn-add">Add</button>
      </div>
    </form>
  </div>
</div>



    <!-- View Item Modal -->
    <div class="modal" id="viewItemModal">
      <div class="modal-content">
        <div class="modal-header">
          <h3><i class="bx bx-show"></i> View Item</h3>
          <span class="close-btn">&times;</span>
        </div>
        <form class="modal-form">
          <label>Product Name</label>
          <input type="text" placeholder="Product Name" readonly />

          <label>Product Model</label>
          <input type="text" placeholder="Product Model" readonly />

          <label>Supplier Name</label>
          <input type="text" placeholder="Supplier Name" readonly />

          <label>Address</label>
          <input type="text" placeholder="Supplier Address" readonly />

          <label>Contact Number</label>
          <input type="text" placeholder="Contact Number" readonly />
        </form>
      </div>
    </div>

    <!-- Edit Item Modal -->
<div class="modal" id="editItemModal">
  <div class="modal-content">
    <div class="modal-header">
      <h3><i class="bx bx-edit"></i> Edit Item</h3>
      <span class="close-btn">&times;</span>
    </div>
    <form class="modal-form">
      <div class="form-grid">
        <!-- Product Name and Model -->
        <div class="form-group">
          <label>Product Name</label>
          <input type="text" placeholder="Product Name" />
        </div>
        <div class="form-group">
          <label>Product Model</label>
          <input type="text" placeholder="Product Model" />
        </div>

        <!-- Supplier Name and Categories -->
        <div class="form-group">
          <label>Supplier Name</label>
          <select id="editSupplierName" style="width: 100%">
            <option value="supplier0">Select Supplier Name</option>
            <option value="supplier1">ASUS</option>
            <option value="supplier2">Predator</option>
            <option value="supplier3">Lenovo</option>
          </select>
        </div>
        <div class="form-group">
          <label>Categories</label>
          <select id="editCategories" style="width: 100%">
            <option value="category1">Keyboard</option>
            <option value="category2">Mouse</option>
            <option value="category3">CPU</option>
          </select>
        </div>

        <!-- Product Image and Stock -->
        <div class="form-group">
          <label>Product Image</label>
          <input type="file" accept="image/*" />
        </div>
        <div class="form-group">
          <label>Stock</label>
          <input type="number" placeholder="Stock" />
        </div>

        <!-- Date Received and Status -->
        <div class="form-group">
          <label>Date Received</label>
          <input type="date" />
        </div>
        <div class="form-group">
          <label>Status</label>
          <select>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
        </div>
      </div>
      <div class="modal-actions">
        <button type="submit" class="btn-add">Save</button>
      </div>
    </form>
  </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script src="/js/nav&side.js"></script>
    <script src="/js/inventory.js"></script>
  </body>
</html>
